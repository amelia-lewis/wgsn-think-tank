extends ../layout

block append vars
  - bodyclass = 'category-view'

mixin report-item(img, date, title, category)
  .report-item
    img(src="/img/square.jpg" width="100%")
    .text.block-top-sm.block-bot-md.text-center
      p.text-uppercase.text-grey.text-smaller= date
      h3= title
      p= description
      p.text-uppercase.text-grey.text-smaller= category

block content
  .content-wrap
    .btn-menu.block-ver-xs.block-hor-sm.bg-black.text-uppercase.text-smaller Menu
    .row
      .col-lg-2.bg-xlt-grey.sub-nav-container
        include ../partials/sub-nav

      .col-xs-12.col-sm-12.col-md-12.col-lg-10.block-top-md
        h4.directory-page-subtitle &nbsp;
        hr
        h1 Consumer Insights

        - var n = 0
        .row
          while n < 28
            .col-xs-6.col-sm-4.col-md-3
              +report-item("", "July 5th, 2016", "Modern India - Social & Cultural Influences", "Social media")
            - n++

          .col-xs-12.text-center.block-ver-lg
            button Load more