extends ../../layout

include ../../partials/mixins/lg-item
//- img, info1, info2, title, description

block append vars
  - bodyclass = 'sub-category-view'

block content
  .content-wrap
    .btn-menu.block-ver-xs.block-hor-sm.bg-black.text-uppercase.text-smaller Menu
    .row
      .col-lg-2.bg-xlt-grey.sub-nav-container
        include ../../partials/sub-nav

      .col-xs-12.col-sm-12.col-md-12.col-lg-10.block-top-md
        a(href="/consumer-insights"): h4.directory-page-subtitle Consumer Insights
        hr
        h1 Shopping Trends

        - var n = 0
        .row
          while n < 28
            .col-xs-6.col-sm-4.col-md-3
              +lg-item("../../img/square.jpg", "July 5th, 2016", "Social media", "Modern India - Social & Cultural Influences", "")
            - n++

          .col-xs-12.text-center.block-ver-lg
            button Load more