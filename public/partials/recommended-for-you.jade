mixin recommended-item(img, date, title)
  .recommended-item.overflow-auto
    .img.pull-left(style="background-image: url(" + img + ");")
    .text.pull-left.block-hor-sm
      p.tight.text-uppercase= title
      p.text-uppercase.text-grey.text-smaller= date

